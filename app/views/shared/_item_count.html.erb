<%# Local variables: mc [Hash] %>

<div class="tooltip">
  <h2>Item Count</h2>
  <span class="tooltiptext"><%= item_count_tooltip %></span>
</div>

<% if mc['count'].present? %>

  <table>
    <tr>
      <td>Item count</td>
      <td><%= mc['count'] %></td>
    </tr>
  </table>

<% else %>
  <div class="no-data">Data not available</div>
<% end %>
