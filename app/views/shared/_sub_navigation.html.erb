<%# Local variables: hub [String] %>

<% if current_user.hub == "All" %>
<div class="submenu">
  <nav>
    <ul>
      <li><%= link_to hub, hub_path(hub) %></li>
      <% if Hub.new(hub, "", "").contributors.count > 1 %>
        <li><%= link_to "Contributors", hub_contributors_path(hub) %></li>
      <% end %>
    </ul>
  </nav>
</div>
<% end %>
