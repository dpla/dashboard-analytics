<%# Local variables: @bws_overiew [BwsOverview],
                     @bws_event_totals [BwsEventTotals] %>
<% if bws_data_for_date_range? %>

  <table>
    <tr>
      <td>
          <div class="tooltip">
            Item count
            <span class="tooltiptext"><%= bws_item_count_tooltip %></span>
          </div>
      </td>
      <td>
        <%= number_with_delimiter(@bws_item_count, :delimiter => ',') %>
      </td>
    </tr>
    <tr>
      <td>
          <div class="tooltip">
            Item views
            <span class="tooltiptext"><%= view_bws_item_tooltip %></span>
          </div>
      </td>
      <td>
        <%= number_with_delimiter(@bws_event_totals.item_events, :delimiter => ',') %>
      </td>
    </tr>
    <tr>
      <td>
        <div class="tooltip">
          Click throughs
          <span class="tooltiptext"><%= click_through_tooltip %></span>
        </div>
      </td>
      <td>
        <%= number_with_delimiter(@bws_event_totals.click_throughs, :delimiter => ',') %>
      </td>
    </tr>
    <tr>
      <td>
        <div class="tooltip">
          Users
          <span class="tooltiptext"><%= users_tooltip %></span>
        </div>
      </td>
      <td>
        <%= number_with_delimiter(@bws_overview.users, :delimiter => ',') %>
      </td>
    </tr>
    <tr>
      <td>
        <div class="tooltip">
          Sessions
          <span class="tooltiptext"><%= sessions_tooltip %></span>
        </div>
      </td>
      <td>
        <%= number_with_delimiter(@bws_overview.sessions, :delimiter => ',') %>
      </td>
    </tr>
  </table>

<% else %>
    <div class="no-data">Data not available for this date range.</div>
<% end %>

