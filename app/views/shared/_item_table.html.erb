<%# Local variables: items [Hash] with keys :id, :title, :contributor, :count 
                     base_url [String] %>

<table>
  <tr>
    <th>Item</th>
    <th>Contributor</th>
    <th>Total</th>
  </tr>
  <% items.each do |e| %>
  <tr>
    <td>
      <a href="<%= "#{Settings.dpla.base_uri}item/#{e[:id]}" %>">
        <%= e[:title] %>
      </a>
    </td>
    <td><%= e[:contributor] %></td>
    <td><%= e[:count] %></td>
  </tr>
  <% end %>
</table>
