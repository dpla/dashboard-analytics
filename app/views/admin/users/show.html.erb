<p class="notice"><%= notice %></p>

<h1>User profile</h1>

<dl>
  <dt>Email</dt>
  <dd><%= @user.email %></dd>

  <dt>Hub</dt>
  <dd><%= @user.hub %></dd>

  <dt>Permissions</dt>
  <dd><%= @user.admin ? "Admin" : "General" %></dd>
</dl>

<%= button_to "Change password", edit_user_registration_path, method: :get %>

<%= button_to "Delete this account", admin_user_path(current_user), method: :delete, 
  data: { confirm: "Are you sure you want to delete this account?" } %>
