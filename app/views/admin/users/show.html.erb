<main>
  <p class="notice"><%= notice %></p>

  <h1><%= @user.email %></h1>

  <dl>
    <dt>Hub permissions</dt>
    <dd><%= @user.hub %></dd>

    <dt>User permissions</dt>
    <dd><%= @user.admin ? "Admin" : "User" %></dd>
  </dl>

  <% if current_user.admin %>
  <%= button_to "Edit permissions", edit_admin_user_path(@user), method: :get %>
  <% end %>

  <%= button_to "Change password", edit_user_registration_path(current_user),
    method: :get %>

  <%= button_to "Delete", admin_user_path(current_user), method: :delete, 
    data: { confirm: "Are you sure you want to delete this account?" } %>

</main>
