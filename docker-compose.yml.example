version: "3.9"
services:
  db:
    image: postgres
    volumes:
      - ./tmp/db:/var/lib/postgresql/data
    environment:
      POSTGRES_PASSWORD: CHANGEME
  web:
    build: .
    ports:
      - "3000:3000"
    volumes:
      - .:/dashboard-analytics
    depends_on: 
      - db
    environment:
      SECRET_KEY_BASE: CHANGEME
